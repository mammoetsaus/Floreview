@model Floreview.ViewModels.BlogVM

@using (Html.BeginForm("Index", "Blog", FormMethod.Get, new { @id = "side-blog-search-form" }))
{
    String queryValue = "";
    if (Model.Query != null)
    {
        queryValue = Model.Query;
    }
    <input type="text" id="q" name="q" placeholder="Zoeken" autocomplete="off" value="@queryValue" />

    <svg version="1.1" id="side-blog-search-form-submit" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
         viewBox="0 0 40 40" enable-background="new 0 0 40 40" xml:space="preserve">
    <rect fill="#1F9B35" width="40" height="40" />
    <g>
    <g>
    <path fill="#FFFFFF" d="M26.2,16.9c0-5.2-4.2-9.4-9.4-9.4c-5.2,0-9.4,4.2-9.4,9.4c0,5.2,4.2,9.4,9.4,9.4
			        C22.1,26.2,26.2,22.1,26.2,16.9L26.2,16.9z M16.9,23.9c-3.9,0-7-3.2-7-7c0-3.9,3.2-7,7-7c3.9,0,7,3.2,7,7
			        C23.9,20.8,20.8,23.9,16.9,23.9L16.9,23.9z M16.9,23.9" />
    <path fill="#FFFFFF" d="M31.8,28.5l-5.7-5.7c-0.9,1.3-2,2.5-3.3,3.3l5.7,5.7c0.9,0.9,2.4,0.9,3.3,0C32.7,30.9,32.7,29.4,31.8,28.5
			        L31.8,28.5z M31.8,28.5" />
	        </g>
        </g>
    </svg>
}

<div style="clear: both;"></div>

<div class="side-blog-information">
    <h3>Categorieën</h3>
    <ul>
        @{
            if (Model.Categories != null && Model.Categories.Count > 0)
            {
                for (int i = 0; i < Model.Categories.Count; i++)
                {
                    <li><a href="/Blog/Index?c=@Model.Categories[i].ID">@Model.Categories[i].Name <span>(@Model.CategoryFrequencies[i])</span></a></li>
                }
            }
        }
    </ul>
</div>

<div class="side-blog-information">
    <h3>Archief</h3>
    <ul>
        @{
            if (Model.Dates != null && Model.Dates.Count > 0)
            {
                foreach (var item in Model.Dates)
                {
                    var date = item.Key;
                    var frequency = item.Value;
                    
                    <li><a href="/Blog/Index?d=@date.Month-@date.Year">@date.ToLocalTime().ToString("MMMM") @date.Year <span>(@frequency)</span></a></li>
                }
            }
        }
    </ul>
</div>