@using Floreview.Resources

<header class="admin">
    <nav>
        <ul class="content-container">
            <li>
                @Html.ActionLink(Global.Menu_Home, "Index", "Home")
            </li>
            <li>
                @Html.ActionLink(Global.Menu_Blog, "Index", "Blog")
            </li>
            <li>
                @Html.ActionLink(Global.Menu_Floreview, "Index", "Home")
            </li>
            <li>
                @Html.ActionLink(Global.Menu_Contact, "Index", "Home")
            </li>
            <li>
                @Html.Partial("_LoginPartial")
            </li>
        </ul>
    </nav>

    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <section class="menu-admin">
            <ul class="content-container">
                <li>
                    @Html.ActionLink(Global.Menu_Admin_Stores, "Store", "Manage")
                </li>
                <li>
                    @Html.ActionLink(Global.Menu_Admin_Blogs, "Blog", "Manage")
                </li>
            </ul>
        </section>
    }
</header>

<section class="manage-information">
    <a href="/Manage/AddStore">@Global.Manage_Store_Add_Store</a>
    <select>
        <option value="0">@Global.Manage_Store_Select_Recent</option>
        <option value="1">@Global.Manage_Store_Select_Name</option>
        <option value="2">@Global.Manage_Store_Select_City</option>
        <option value="3">@Global.Manage_Store_Select_Province</option>
    </select>
    <input type="text" placeholder="@Global.Manage_Store_Search_Placeholder" />
    <img id="manage-store-loading-icon" src="http://floreview.blob.core.windows.net/images/icon_loading.gif" alt="Loading icon" />
</section>

<section class="manage-store-list">
</section>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        loadCompanies("", 0);

        var searchInput = document.querySelector('section.manage-store-information input[type="text"]'),
            sortList = document.querySelector('section.manage-store-information select');


        searchInput.addEventListener('blur', function () {
            var filter = this.value,
                sort = sortList.options[sortList.selectedIndex].value;

            loadCompanies(filter, sort);
        });

        sortList.addEventListener('change', function () {
            var filter = searchInput.value,
                sort = this.options[this.selectedIndex].value;

            loadCompanies(filter, sort);
        });
    });

    function loadCompanies(filter, sort) {
        var loadingIcon = document.getElementById('manage-store-loading-icon'),
            storeList = document.querySelector('section.manage-store-list'),
            request = new XMLHttpRequest();

        loadingIcon.classList.add('loading');
        storeList.innerHTML = null;

        request.onreadystatechange = function () {
            if (request.readyState == 4 && request.status == 200) {
                parseLoadedCompanies(JSON.parse(request.responseText), function (data) {
                    storeList.innerHTML = data;
                    loadingIcon.classList.remove('loading');
                });
            }
        };
        request.open("GET", "/api/companies?filter=" + filter + "&sort=" + sort, true);
        request.send();
    }

    function parseLoadedCompanies(arr, resultCallback) {
        var output = "";
        for (var i = 0; i < arr.length; i++) {
            output += '<div class="store-profile"><p>' + arr[i].Name + '</p><p>' + arr[i].Location.City + '</p><p>' + arr[i].Location.Province.Name + '</p><ul><li><a href="/Detail?profile=' + arr[i].ID + '"><svg class="icon-info" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 310 310" enable-background="new 0 0 310 310" xml:space="preserve"><rect fill="#cccccc" width="310" height="310"/><polygon fill="#ffffff" points="107.9,263.5 104.2,260.4 199,155 104.2,49.6 107.9,46.5 205.8,155 "/></svg></a></li><li><a href="/Manage/EditStore?id=' + arr[i].ID + '" title="Edit"><svg class="icon-edit" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 50 50" enable-background="new 0 0 50 50" xml:space="preserve"><rect fill="#cccccc" width="50" height="50"/><g><path fill="#ffffff" d="M12.5,37.5l2.7-0.4l-2.4-2.4L12.5,37.5z M12.5,37.5"/><g><path fill="#ffffff" d="M13.3,31.6L13,33.7l3.3,3.3l2.1-0.3L33,22.2L27.8,17L13.3,31.6z M13.3,31.6"/><path fill="#ffffff" d="M33.4,12.8c-0.2-0.2-0.4-0.3-0.6-0.3c-0.2,0-0.5,0.1-0.7,0.3l-3.5,3.5l5.2,5.1l3.5-3.5 c0.4-0.4,0.4-1,0-1.3L33.4,12.8z M33.4,12.8"/></g></g></svg></a></li><li><a href="/Manage/DeleteStore?id=' + arr[i].ID + '" title="Delete"><svg class="icon-delete" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 50 50" enable-background="new 0 0 50 50" xml:space="preserve"><rect fill="#cccccc" width="50" height="50"/><g><path fill="#ffffff" d="M32.7,22.7L32.7,22.7C32.7,22.8,32.7,22.8,32.7,22.7c0,0.1,0,0.1,0,0.1l-0.6,12.2h0c-0.1,1-1.2,2.4-7.1,2.4 c-5.9,0-7-1.5-7.1-2.4h0l-0.6-12.2c0,0,0,0,0,0c0,0,0,0,0,0l0-0.1h0c0-0.1,0.1-0.2,0.2-0.3c0.8,0.8,3.8,0.9,7.5,0.9 c3.7,0,6.7-0.1,7.5-0.9C32.6,22.5,32.7,22.6,32.7,22.7L32.7,22.7z M33.7,18.1v1.4c0,0.3-0.3,0.6-0.8,0.8c-1.4,0.7-4.4,1.1-7.9,1.1 c-3.5,0-6.5-0.5-7.9-1.1c-0.5-0.3-0.8-0.5-0.8-0.8v-1.4c0-