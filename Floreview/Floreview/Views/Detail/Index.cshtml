                            if (!String.IsNullOrEmpty(image))
                            {
                                if (counter < 4)
                                {
                                    String url = "http://floreview.blob.core.windows.net/profiles/{0}.jpg";
                                    <li>
                                        <img src="@String.Format(url, image)" alt="@Model.Company.Name" />
                                    </li>
                    
